@using System.IdentityModel.Tokens.Jwt
@using System.Linq
@using System.Security.Claims
@using KEB.Application.DTOs.NotificationDTO
@{



    var token = Context.Request.Cookies["token"];
    var username = string.Empty;
    var role = string.Empty;

    var avatarUrl = Url.Content("~/images/default-avatar.png");
    if (!string.IsNullOrEmpty(token))
    {
        var handler = new JwtSecurityTokenHandler();
        var jsonToken = handler.ReadToken(token) as JwtSecurityToken;
        var userId = Guid.Empty;
        if (jsonToken != null)
        {
            // Lấy các claims từ token
            role = jsonToken?.Claims.FirstOrDefault(c => c.Type == "role")?.Value;
            username = jsonToken?.Claims.FirstOrDefault(c => c.Type == "unique_name")?.Value;
            var avatarId = jsonToken.Claims.FirstOrDefault(c => c.Type == "avatar")?.Value;
            avatarUrl = string.IsNullOrEmpty(avatarId)
               ? Url.Content("~/images/default-avatar.png")
              : $"https://localhost:7101/api/ImageFile/Download?id={avatarId}";
            var sidClaim = jsonToken.Claims.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/sid");
            if (sidClaim != null && Guid.TryParse(sidClaim.Value, out var parsedGuid))
            {
                userId = parsedGuid;
            }
        }
    }
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Korean Exam Bank</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <style>
        .dropdown-menu a:hover {
            text-decoration: underline;
        }

        #examOptions, #questionBankOptions, #taskOptions, #importOptions {
            display: none;
            margin-top: 10px;
            text-align: right;
        }

            #examOptions div {
                padding: 5px 10px;
                background-color: #024b94;
                border-radius: 5px;
                margin-bottom: 5px;
                display: inline-block;
            }

            #examOptions a {
                color: white;
            }

        .notification-container {
            position: relative;
            display: inline-block;
            font-family: Arial, sans-serif;
        }

        .notification-header {
            cursor: pointer;
            position: relative;
            display: flex;
            align-items: center;
            user-select: none;
        }

        .bell-icon {
            width: 28px;
            height: 28px;
            fill: #555;
            transition: fill 0.3s ease;
        }

        .notification-header:hover .bell-icon {
            fill: #007bff;
        }

        .badge {
            position: absolute;
            top: -6px;
            right: -6px;
            background-color: #dc3545;
            color: white;
            font-size: 12px;
            padding: 2px 6px;
            border-radius: 12px;
            font-weight: bold;
            min-width: 20px;
            text-align: center;
            box-shadow: 0 0 4px rgba(0,0,0,0.2);
        }

        .notification-list {
            position: absolute;
            top: 38px;
            right: 0;
            width: 320px;
            max-height: 300px;
            background: white;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            overflow-y: auto;
            padding: 10px 0;
            margin: 0;
            list-style: none;
            opacity: 0;
            pointer-events: none;
            transform: translateY(-10px);
            transition: opacity 0.3s ease, transform 0.3s ease;
            z-index: 100;
            font-size: 14px;
            color: #333;
        }

            .notification-list.show {
                opacity: 1;
                pointer-events: auto;
                transform: translateY(0);
            }

            .notification-list li {
                padding: 10px 20px;
                border-bottom: 1px solid #eee;
                cursor: default;
            }

                .notification-list li:last-child {
                    border-bottom: none;
                }

                .notification-list li:hover {
                    background-color: #f0f8ff;
                }

        .notification-empty {
            text-align: center;
            color: #888;
            font-style: italic;
            padding: 20px;
            cursor: default;
        }

        .dropdown-menu {
            z-index: 1001; 
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column">
        <div class="mb-4">
            <img src="~/images/korea.jpg" class="img-fluid mb-2" style="max-height: 40px;" />
            <h6 class="text-white">Korean<br /> Exam Bank</h6>
        </div>

        <nav class="flex-column">
            <a asp-controller="Statistics" asp-action="Index">Thống Kê</a>
            <a asp-controller="Levels" asp-action="Index">Cấp độ</a>
            <a asp-controller="Topics" asp-action="Index">Chủ đề</a>
            <a asp-controller="References" asp-action="Index">Tài liệu tham khảo</a>

            <button class="btn btn-primary" style="background-color: #024b94;" onclick="toggleSection('examOptions')">Kỳ Thi ▼</button>
            <div id="examOptions">
                <a asp-controller="ExamType" asp-action="Index" class="d-block text-decoration-none text-white mb-2">
                    Loại Kỳ Thi
                </a>
                <a asp-controller="Exam" asp-action="Index" class="d-block text-decoration-none text-white">
                    Kỳ Thi
                </a>
            </div>

            @* <a asp-controller="Question" asp-action="Create">Nhập Câu Hỏi</a> *@
            <button class="btn btn-primary" style="background-color: #024b94;" onclick="toggleSection('importOptions')">Nhập câu hỏi ▼</button>
            <div id="importOptions">
                <a asp-controller="Question" asp-action="Create" class="d-block text-decoration-none text-white mb-2">
                    Nhập thủ công
                </a>
                <a asp-controller="Question" asp-action="ImportExcel" class="d-block text-decoration-none text-white">
                    Nhập bằng file Excel
                </a>
            </div>

            <button class="btn btn-primary" style="background-color: #024b94;" onclick="toggleSection('questionBankOptions')">Ngân Hàng Câu Hỏi ▼</button>
            <div id="questionBankOptions">
                <a asp-controller="QuestionType" asp-action="Index" class="d-block text-decoration-none text-white mb-2">
                    Loại câu hỏi
                </a>
                <a asp-controller="Question" asp-action="Index" class="d-block text-decoration-none text-white">
                    Danh sách câu hỏi
                </a>
            </div>

            <a asp-controller="Paper" asp-action="Index">Ngân Hàng Đề Thi</a>

            <button class="btn btn-primary" style="background-color: #024b94;" onclick="toggleSection('taskOptions')">Nhiệm vụ ▼</button>
            <div id="taskOptions">
                <a asp-controller="Task" asp-action="ReviewQuestion" class="d-block text-decoration-none text-white mb-2">
                    Duyệt câu hỏi
                </a>
                <a asp-controller="Task" asp-action="Index" class="d-block text-decoration-none text-white">
                    Quản lý nhiệm vụ
                </a>
            </div>

            <a asp-controller="Users" asp-action="Index">Danh Sách Tài Khoản</a>
            <a asp-controller="AccessLog" asp-action="Index">Hoạt Động</a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class=" d-flex align-items-center justify-content-end gap-3 pe-4 pt-3">

            @if (token == null)
            {
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-controller="Commonweb" asp-action="Login">Đăng nhập</a></li>
                    </ul>
                </div>
            }
            else
            {
                <div class="notification-container">
                    <div id="notification-header" class="notification-header" title="Xem thông báo">
                        <svg class="bell-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                            <path d="M12 24c1.104 0 2-.896 2-2h-4c0 1.104.896 2 2 2zm6-6v-5c0-3.07-1.63-5.64-4.5-6.32V6a1.5 1.5 0 1 0-3 0v.68C7.63 7.36 6 9.93 6 13v5l-2 2v1h16v-1l-2-2z" />
                        </svg>
                        <span id="notification-badge" class="badge">0</span>
                    </div>
                    <ul id="notification-list" class="notification-list">
                        <li class="notification-empty">Không có thông báo mới</li>
                    </ul>
                </div>

                <img src="@avatarUrl" alt="Avatar" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                <div class="text-end">
                    <strong>@username</strong><br />
                    <small>@role</small>
                </div>

                <div class="dropdown">
                    <button id="userDropdown" class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" asp-controller="Users" asp-action="Details">Tài Khoản</a></li>
                        <li><a class="dropdown-item" asp-controller="Commonweb" asp-action="ChangePassword">Đổi Mật Khẩu</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Commonweb" asp-action="Logout" method="post">
                                <button class="dropdown-item text-danger">Đăng Xuất</button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
        </div>

        <main class="pt-5">
            @RenderBody()

        </main>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script>
        function toggleSection(sectionId) {
            const section = document.getElementById(sectionId);
            if (section) {
                section.style.display = section.style.display === 'none' ? 'block' : 'none';
            }
        }

        const notifHeader = document.getElementById('notification-header');
        const notifList = document.getElementById('notification-list');

        if (notifHeader && notifList) {
             // Click vào header để toggle notification
             notifHeader.addEventListener('click', (e) => {
                 e.stopPropagation();
                 e.preventDefault();

                 // Đóng tất cả dropdown khác trước khi mở notification
                 const allDropdowns = document.querySelectorAll('.dropdown-menu.show');
                 allDropdowns.forEach(dropdown => {
                     dropdown.classList.remove('show');
                 });

                 notifList.classList.toggle('show');
             });

            // Click ra ngoài để đóng notification
            document.addEventListener('click', (e) => {
                 if (!notifHeader.contains(e.target) && !notifList.contains(e.target)) {
                    notifList.classList.remove('show');
                }
            });
        }
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js"></script>
    <script src="~/js/notification-hub.js"></script>
</body>
</html>
