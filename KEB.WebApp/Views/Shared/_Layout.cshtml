@using System.IdentityModel.Tokens.Jwt
@using System.Linq
@using System.Security.Claims
@using KEB.Application.DTOs.NotificationDTO
@{



    var token = Context.Request.Cookies["token"];
    var username = string.Empty;
    var role = string.Empty;

    var avatarUrl = Url.Content("~/images/default-avatar.png");
    if (!string.IsNullOrEmpty(token))
    {
        var handler = new JwtSecurityTokenHandler();
        var jsonToken = handler.ReadToken(token) as JwtSecurityToken;

        if (jsonToken != null)
        {
            // Lấy các claims từ token
            role = jsonToken?.Claims.FirstOrDefault(c => c.Type == "role")?.Value;
            username = jsonToken?.Claims.FirstOrDefault(c => c.Type == "unique_name")?.Value;
            var avatarId = jsonToken.Claims.FirstOrDefault(c => c.Type == "avatar")?.Value;
             avatarUrl = string.IsNullOrEmpty(avatarId)
                ? Url.Content("~/images/default-avatar.png")
               : $"https://localhost:7101/api/ImageFile/Download?id={avatarId}";

        }
    }
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Korean Exam Bank</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        .dropdown-menu a:hover {
            text-decoration: underline;
        }

        #examOptions, #questionBankOptions, #taskOptions {
            display: none;
            margin-top: 10px;
            text-align: right;
        }

            #examOptions div {
                padding: 5px 10px;
                background-color: #024b94;
                border-radius: 5px;
                margin-bottom: 5px;
                display: inline-block;
            }

            #examOptions a {
                color: white;
            }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column">
        <div class="mb-4">
            <img src="~/images/korea.jpg" class="img-fluid mb-2" style="max-height: 40px;" />
            <h6 class="text-white">Korean<br /> Exam Bank</h6>
        </div>

        <nav class="flex-column">
            <a href="#" class="active">Thống Kê</a>
            <a asp-controller="Levels" asp-action="Index">Cấp độ</a>
            <a asp-controller="Topics" asp-action="Index">Chủ đề</a>
            <a asp-controller="References" asp-action="Index">Tài liệu tham khảo</a>

            <button class="btn btn-primary" onclick="toggleSection('examOptions')">Kỳ Thi ▼</button>
            <div id="examOptions">
                <a asp-controller="ExamType" asp-action="Index" class="d-block text-decoration-none text-white mb-2">
                    Loại Kỳ Thi
                </a>
                <a asp-controller="Exam" asp-action="Index" class="d-block text-decoration-none text-white">
                    Kỳ Thi
                </a>
            </div>

            <a asp-controller="Question" asp-action="Create">Nhập Câu Hỏi</a>

            <button class="btn btn-primary" onclick="toggleSection('questionBankOptions')">Ngân Hàng Câu Hỏi ▼</button>
            <div id="questionBankOptions">
                <a asp-controller="QuestionType" asp-action="Index" class="d-block text-decoration-none text-white mb-2">
                    Loại câu hỏi
                </a>
                <a asp-controller="Question" asp-action="Index" class="d-block text-decoration-none text-white">
                    Danh sách câu hỏi
                </a>
            </div>

            <a href="#">Ngân Hàng Đề Thi</a>

            <button class="btn btn-primary" onclick="toggleSection('taskOptions')">Nhiệm vụ ▼</button>
            <div id="taskOptions">
                <a asp-controller="Task" asp-action="ReviewQuestion" class="d-block text-decoration-none text-white mb-2">
                    Duyệt câu hỏi
                </a>
                <a asp-controller="#" asp-action="Index" class="d-block text-decoration-none text-white mb-2">
                    Duyệt đề thi
                </a>
                <a asp-controller="Task" asp-action="Index" class="d-block text-decoration-none text-white">
                    Quản lý nhiệm vụ
                </a>
            </div>

            <a asp-controller="Users" asp-action="Index">Danh Sách Tài Khoản</a>
            <a href="#">Hoạt Động</a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class=" d-flex align-items-center justify-content-end gap-3 pe-4 pt-3">
           
            @if (token == null)
            {
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-controller="Common" asp-action="Login">Đăng nhập</a></li>
                    </ul>
                </div>
            }
            else
            {
                <div class="dropdown">
                    <button class="btn position-relative" type="button" id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-bell fs-5"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            3
                            <span class="visually-hidden">unread messages</span>
                        </span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown" style="width: 300px;">
                        <li class="dropdown-header fw-bold">Thông báo</li>

                        @if (TempData["Notifications"] != null)
                        {
                            var notifications = TempData["Notifications"] as List<NotificationDisplayDto>;
                            if (notifications != null && notifications.Any())
                            {
                                foreach (var notification in notifications)
                                {
                                    <li>
                                        <a class="dropdown-item text-wrap" href="#">
                                            @notification.Description
                                        </a>
                                    </li>
                                }
                            }
                            else
                            {
                                <li><span class="dropdown-item text-muted">Không có thông báo</span></li>
                            }
                        }
                        else
                        {
                            <li><span class="dropdown-item text-muted">Đang tải thông báo...</span></li>
                        }

                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-center text-primary" href="#">Xem tất cả</a></li>
                    </ul>
                </div>

                <img src="@avatarUrl" alt="Avatar" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                <div class="text-end">
                    <strong>@username</strong><br />
                    <small>@role</small>
                </div>

                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-controller="Users" asp-action="Details">Tài Khoản</a></li>
                        <li><a class="dropdown-item" asp-controller="Common" asp-action="ChangePassword">Đổi Mật Khẩu</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Common" asp-action="Logout" method="post">
                                <button class="dropdown-item text-danger">Đăng Xuất</button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
        </div>

        <main class="pt-5">
            @RenderBody()

        </main>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script>
        function toggleSection(sectionId) {
            const section = document.getElementById(sectionId);
            section.style.display = section.style.display === 'none' ? 'block' : 'none';
        }
    </script>

</body>
</html>
