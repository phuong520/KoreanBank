@using System.IdentityModel.Tokens.Jwt
@using System.Linq
@using System.Security.Claims
@using KEB.Application.DTOs.NotificationDTO
@{



    var token = Context.Request.Cookies["token"];
    var username = string.Empty;
    var role = string.Empty;

    var avatarUrl = Url.Content("~/images/default-avatar.png");
    if (!string.IsNullOrEmpty(token))
    {
        var handler = new JwtSecurityTokenHandler();
        var jsonToken = handler.ReadToken(token) as JwtSecurityToken;

        if (jsonToken != null)
        {
            // Lấy các claims từ token
            role = jsonToken?.Claims.FirstOrDefault(c => c.Type == "role")?.Value;
            username = jsonToken?.Claims.FirstOrDefault(c => c.Type == "unique_name")?.Value;
            var avatarId = jsonToken.Claims.FirstOrDefault(c => c.Type == "avatar")?.Value;
             avatarUrl = string.IsNullOrEmpty(avatarId)
                ? Url.Content("~/images/default-avatar.png")
               : $"https://localhost:7101/api/ImageFile/Download?id={avatarId}";

        }
    }
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Korean Exam Bank</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/notification-hub.js"></script>
    <style>
        .dropdown-menu a:hover {
            text-decoration: underline;
        }

        #examOptions, #questionBankOptions, #taskOptions {
            display: none;
            margin-top: 10px;
            text-align: right;
        }

            #examOptions div {
                padding: 5px 10px;
                background-color: #024b94;
                border-radius: 5px;
                margin-bottom: 5px;
                display: inline-block;
            }

            #examOptions a {
                color: white;
            }

        .notification-container {
            position: relative;
            display: inline-block;
        }

        .notification-header {
            cursor: pointer;
            padding: 8px;
        }

        .badge {
            background-color: red;
            color: white;
            border-radius: 50%;
            padding: 2px 6px;
            font-size: 12px;
            margin-left: 5px;
        }

        .notification-list {
            display: none;
            position: absolute;
            right: 0;
            min-width: 300px;
            max-height: 400px;
            overflow-y: auto;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            z-index: 999;
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .notification-container:hover .notification-list {
            display: block;
        }

        .notification-item {
            padding: 10px;
            border-bottom: 1px solid #eee;
        }

            .notification-item.unread {
                background-color: #f0f7ff;
            }

        .notification-content {
            margin-bottom: 5px;
        }

        .notification-time {
            font-size: 12px;
            color: #777;
        }

        .notification-empty {
            padding: 10px;
            text-align: center;
            color: #777;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column">
        <div class="mb-4">
            <img src="~/images/korea.jpg" class="img-fluid mb-2" style="max-height: 40px;" />
            <h6 class="text-white">Korean<br /> Exam Bank</h6>
        </div>

        <nav class="flex-column">
            <a asp-controller="Statistics" asp-action="Index">Thống Kê</a>
            <a asp-controller="Levels" asp-action="Index">Cấp độ</a>
            <a asp-controller="Topics" asp-action="Index">Chủ đề</a>
            <a asp-controller="References" asp-action="Index">Tài liệu tham khảo</a>

            <button class="btn btn-primary" style="background-color: #024b94;" onclick="toggleSection('examOptions')">Kỳ Thi ▼</button>
            <div id="examOptions">
                <a asp-controller="ExamType" asp-action="Index" class="d-block text-decoration-none text-white mb-2">
                    Loại Kỳ Thi
                </a>
                <a asp-controller="Exam" asp-action="Index" class="d-block text-decoration-none text-white">
                    Kỳ Thi
                </a>
            </div>

            <a asp-controller="Question" asp-action="Create">Nhập Câu Hỏi</a>

            <button class="btn btn-primary" style="background-color: #024b94;" onclick="toggleSection('questionBankOptions')">Ngân Hàng Câu Hỏi ▼</button>
            <div id="questionBankOptions">
                <a asp-controller="QuestionType" asp-action="Index" class="d-block text-decoration-none text-white mb-2">
                    Loại câu hỏi
                </a>
                <a asp-controller="Question" asp-action="Index" class="d-block text-decoration-none text-white">
                    Danh sách câu hỏi
                </a>
            </div>

            <a asp-controller="Paper" asp-action="Index">Ngân Hàng Đề Thi</a>

            <button class="btn btn-primary" style="background-color: #024b94;" onclick="toggleSection('taskOptions')">Nhiệm vụ ▼</button>
            <div id="taskOptions">
                <a asp-controller="Task" asp-action="ReviewQuestion" class="d-block text-decoration-none text-white mb-2">
                    Duyệt câu hỏi
                </a>
                <a asp-controller="Task" asp-action="Index" class="d-block text-decoration-none text-white">
                    Quản lý nhiệm vụ
                </a>
            </div>

            <a asp-controller="Users" asp-action="Index">Danh Sách Tài Khoản</a>
            <a asp-controller="AccessLog" asp-action="Index">Hoạt Động</a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class=" d-flex align-items-center justify-content-end gap-3 pe-4 pt-3">
           
            @if (token == null)
            {
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-controller="Commonweb" asp-action="Login">Đăng nhập</a></li>
                    </ul>
                </div>
            }
            else
            {
                <div class="notification-container">
                    <div class="notification-header">
                        <span>Thông báo</span>
                        <span id="notification-badge" class="badge">0</span>
                    </div>
                    <ul id="notification-list" class="notification-list">
                        <li class="notification-empty">Không có thông báo mới</li>
                    </ul>
                </div>

                <img src="@avatarUrl" alt="Avatar" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                <div class="text-end">
                    <strong>@username</strong><br />
                    <small>@role</small>
                </div>

                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-controller="Users" asp-action="Details">Tài Khoản</a></li>
                        <li><a class="dropdown-item" asp-controller="Commonweb" asp-action="ChangePassword">Đổi Mật Khẩu</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Commonweb" asp-action="Logout" method="post">
                                <button class="dropdown-item text-danger">Đăng Xuất</button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
        </div>

        <main class="pt-5">
            @RenderBody()

        </main>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script>
        function toggleSection(sectionId) {
            const section = document.getElementById(sectionId);
            section.style.display = section.style.display === 'none' ? 'block' : 'none';
        }
    </script>
    <script>
        // Thêm hiệu ứng click cho thông báo
        document.addEventListener("DOMContentLoaded", function() {
            var notificationHeader = document.querySelector(".notification-header");
            var notificationList = document.getElementById("notification-list");

            notificationHeader.addEventListener("click", function() {
                if (notificationList.style.display === "block") {
                    notificationList.style.display = "none";
                } else {
                    notificationList.style.display = "block";
                }
            });

            // Đóng thông báo khi click ra ngoài
            document.addEventListener("click", function(event) {
                if (!event.target.closest(".notification-container")) {
                    notificationList.style.display = "none";
                }
            });
        });
    </script>
</body>
</html>
