@model KEB.Application.DTOs.QuestionAddDTO.ImportQuestionFromExcelRequest

@{
    ViewData["Title"] = "Upload Questions from Excel";
}
<body>
    <div class="container mt-5">
        <h2>Thêm câu hỏi từ Excel</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">@ViewBag.Success</div>
            @if (ViewBag.Result != null)
            {
                <ul>
                    @foreach (var message in ViewBag.Result.Messages)
                    {
                        <li>@message</li>
                    }
                </ul>
            }
        }

        <form asp-action="ImportExcel" enctype="multipart/form-data" method="post" id="uploadForm">
            <div class="mb-3">
                <label class="form-label">Loại câu hỏi</label>
                <select asp-for="ForMultipleChoice" class="form-select">
                    <option value="true">Trắc nghiệm</option>
                    <option value="false">Tự luận</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Tác vụ (Task)</label>
                <select asp-for="TaskId" class="form-select">
                    <option value="">-- Chọn tác vụ --</option>
                    @foreach (var task in ViewBag.Tasks)
                    {
                        <option value="@task.Value">@task.Text</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">File Excel</label>
                <input type="file" asp-for="ExcelFile" class="form-control" accept=".xlsx" required />
                <small class="form-text">
                    Tải template:
                    <a href="@Url.Action("DownloadTemplate", new { forMultipleChoice = true })">Trắc nghiệm</a> |
                    <a href="@Url.Action("DownloadTemplate", new { forMultipleChoice = false })">Tự luận</a>
                </small>
            </div>

            <div class="mb-3">
                <label class="form-label">Tệp đính kèm (hình ảnh/âm thanh)</label>
                <input type="file" name="Attachments" class="form-control" multiple accept=".jpg,.jpeg,.png,.mp3,.wav" />
                <small class="form-text">Hỗ trợ: .jpg, .jpeg, .png (max 5MB), .mp3, .wav (max 10MB)</small>
            </div>

            <button type="submit" class="btn btn-primary">Upload</button>
        </form>
    </div>

    <script>
        $(document).ready(function () {
            $('#uploadForm').submit(function (e) {
                var excelFile = $('#ExcelFile').val();
                if (!excelFile) {
                    alert('Vui lòng chọn file Excel');
                    e.preventDefault();
                    return;
                }
                if (!excelFile.endsWith('.xlsx')) {
                    alert('Chỉ hỗ trợ file .xlsx');
                    e.preventDefault();
                    return;
                }
            });
        });
    </script>
</body>