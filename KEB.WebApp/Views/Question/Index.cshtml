@model IEnumerable<KEB.Application.DTOs.QuestionDTO.QuestionDisplayDto>

@{
    ViewData["Title"] = "Ngân Hàng Câu Hỏi";
}

<div class="container-fluid">
    <div class="row">
        <!-- Filter Sidebar -->
        <div class="col-md-3">
            <div class="card p-3 bg-light">
                <button class="btn btn-success w-100 mb-3">
                    <i class="fas fa-file-excel"></i> Xuất File Excel
                </button>

                <input type="text" class="form-control mb-3" placeholder="Tìm kiếm" />

                <select class="form-select mb-2">
                    <option>Trình độ</option>
                    <option>Sơ cấp I</option>
                    <option>Sơ cấp II</option>
                </select>

                <select class="form-select mb-2">
                    <option>Dạng câu hỏi</option>
                    <option>Nghe</option>
                    <option>Đọc</option>
                </select>

                <select class="form-select mb-2">
                    <option>Mức độ</option>
                    <option>Dễ</option>
                    <option>Trung bình</option>
                    <option>Khó</option>
                </select>

                <select class="form-select mb-2">
                    <option>Loại câu hỏi</option>
                </select>

                <select class="form-select mb-2">
                    <option>Người tham khảo</option>
                </select>

                <select class="form-select mb-2">
                    <option>Chủ đề</option>
                </select>
            </div>
        </div>

        <!-- Question List -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4>Danh Sách Câu Hỏi</h4>
                <div>
                    <button class="btn btn-outline-primary mx-1">Nghe</button>
                    <button class="btn btn-outline-secondary mx-1">Nói</button>
                    <button class="btn btn-outline-success mx-1">Đọc</button>
                    <button class="btn btn-outline-danger mx-1">Viết</button>
                </div>
            </div>

            @foreach (var question in Model)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <strong>@Html.Raw(question.QuestionContent)</strong>
                                <ul class="mt-2">
                                    @foreach (var ans in question.Answers)
                                    {
                                     //   <li>@Html.Raw(ans.AnswerContent)</li>
                                    }
                                </ul>
                                <div class="text-muted mt-2 small">
                                    <span class="badge bg-primary">@question.LevelName</span>
                                    |
                                    <span class="text-info">@question.SkillName</span>
                                    |
                                    <span class="text-secondary">@question.QuestionTypeName</span>
                                    |
                                    <span class="text-dark">@question.ReferenceName</span>
                                    |
                                    <span class="text-warning">@question.TopicName</span>
                                </div>
                            </div>
                            <div>
                                <a href="#" class="btn btn-sm btn-outline-dark">
                                    <i class="fas fa-search"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Pagination -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    <li class="page-item disabled"><a class="page-link">«</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">»</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
